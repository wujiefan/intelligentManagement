/* pages/marchant-order-detail/marchant-order-detail.wxss */
page{
  width: 100%;
  height: 100%;
  font-family: PingFangSC-Regular;
  background: #F7F7F7;
}
.container{
  display: block;
  padding: 0;
}
.detail-top{
  height: 120rpx;
  padding: 32rpx;
  background: #FFF;
  overflow: hidden;
  box-sizing: border-box;
  border-bottom: 1px solid #DDDDDD;
}
.detail-top>text{
  height: 56rpx;
  line-height: 56rpx;
}
.detail-top>text:first-child{
  float: left;
  font-size: 24rpx;
  color: #9B9B9B;
}
.detail-top>text:last-child{
  float: right;
  font-size: 40rpx;
}
.detail-content{
  margin-top: 20rpx;
  background: #FFF;
  border-top: 1px solid #DDDDDD;
  border-bottom: 1px solid #DDDDDD;
}
.detail-title{
  text-align: center;
  font-size: 24rpx;
  color: #9B9B9B;
  padding: 24rpx 0;
}
.detail-list{
  padding: 0 40rpx 40rpx 40rpx;
  box-sizing: border-box;
}
.list-line{
  font-size: 24rpx;
  padding: 8rpx 0;
  width: 100%;
  overflow: hidden;
}
.list-line>view:first-child{
  float: left;
  color: #9B9B9B;
}
.list-line>view:last-child{
  float: right;
}