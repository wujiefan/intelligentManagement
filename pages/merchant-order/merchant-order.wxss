/* pages/marchant-order/marchant-order.wxss */
page{
  width: 100%;
  height: 100%;
  font-family: PingFangSC-Regular;
}
.container{
  display: block;
  padding: 0;
}
.order-title{
  padding: 40rpx 0;
  overflow: hidden;
  box-sizing: border-box;
}
.picker-line{
  float: left;
  width: 50%;
  font-size: 26rpx;
  padding-left: 40rpx;
  box-sizing: border-box;
}
.picker-line>text{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
}
.picker-line picker{
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #4A4A4A;
  font-size: 24rpx;
  border: 1rpx solid #C3C3C3;
  border-radius:4px;
  box-sizing: border-box;
  display: inline-block;
  margin-left: 16rpx;
  padding-left: 20rpx;
  overflow: hidden;
  vertical-align: middle;
}
.order-content{
  width: 100%;
  height: calc(100% - 146rpx);
  border-top: 1px solid #DDDDDD;
}
.list-line{
  padding: 20rpx 40rpx;
  width: 100%;
  height:120rpx;
  font-size: 28rpx;
  overflow: hidden;
  border-bottom: 1px solid #DDDDDD;
  box-sizing: border-box;
}
.list-left{
  float: left;
  width: 75%;
}
.list-left>view{
  height:40rpx;
  line-height: 40rpx;
}
.list-left>view:last-child{
  color: #9B9B9B;
}
.list-right{
  float: left;
  width: 25%;
  height:80rpx;
  line-height: 80rpx;
  color: #00C94F;
  text-align: right;
}