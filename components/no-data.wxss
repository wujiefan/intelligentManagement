/* components/no-data.wxss */
.no-data{
  width: 100%;
  height: 100%;
  position: relative;
}
.no-data>view{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}

.no-data image{
  width: 327rpx;
  height: 128rpx;
}

.no-data text{
  color: #8A8A8A;
  font-size: 34rpx;
  text-align: center;
  display: block;
  margin-top: 20rpx;
}
